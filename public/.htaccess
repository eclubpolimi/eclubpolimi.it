RewriteEngine on

# For react apps in subdirectories uncomment the following
# RewriteBase /subdir_name/
# RewriteRule ^index\.html$ - [L]
# RewriteCond %{REQUEST_FILENAME} !-f
# RewriteCond %{REQUEST_FILENAME} !-d
# RewriteCond %{REQUEST_FILENAME} !-l
# RewriteRule ^.*subdir_name/.* /subdir_name/index.html [L]

# Redirects all subfolders to index.html
# Needed in order for React Router to work
RewriteBase /
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-l
RewriteRule . /index.html [L]