# Contentful CMS Configuration
# Get these values from your Contentful space settings
CMS_GRAPHQL_ENDPOINT=https://graphql.contentful.com/content/v1/spaces/YOUR_SPACE_ID/environments/master
CMS_ACCESS_TOKEN=YOUR_ACCESS_TOKEN

# Client-side accessible environment variables (NEXT_PUBLIC_ prefix required)
NEXT_PUBLIC_CMS_GRAPHQL_ENDPOINT=https://graphql.contentful.com/content/v1/spaces/YOUR_SPACE_ID/environments/master
NEXT_PUBLIC_CMS_ACCESS_TOKEN=YOUR_ACCESS_TOKEN

# Preview/Draft content access (optional)
CMS_PREVIEW_GRAPHQL_ENDPOINT=https://graphql.contentful.com/content/v1/spaces/YOUR_SPACE_ID/environments/master
CMS_PREVIEW_ACCESS_TOKEN=YOUR_PREVIEW_ACCESS_TOKEN

# Next.js Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
