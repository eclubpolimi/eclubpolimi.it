{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "verbatimModuleSyntax": false,
    "ignoreDeprecations": "6.0"
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": [
    ".astro",
    ".codesandbox",
    ".devcontainer",
    "dist",
    "generated",
    "node_modules",
    "src/site-components/**/*"
  ]
}
