---
// Import fonts and global styles
import '../../generated/fonts.css';
import '../../generated/webflow.css';
import '../site-components/global.css';
import '../styles/global.css';

// Import components
import Navbar from '../components/Navbar';
import Footer from '../components/Footer';
import {fetchSiteImagesFromContentful} from '../lib/contentful';

const siteImages = await fetchSiteImagesFromContentful();
const brandingLogo = siteImages.find((asset) => asset.key?.toLowerCase() === 'branding_logo_white');
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Entrepreneurship Club Polimi - Fostering innovation and entrepreneurship at Politecnico di Milano" />
    <meta name="theme-color" content="#ffffff" />
    <title>E-Club Polimi</title>
    <script is:inline>
      document.documentElement.classList.remove('dark');
      try { localStorage.removeItem('theme'); } catch (e) {}
    </script>
  </head>
  
  <body class="bg-white text-black min-h-screen">
    <div class="flex flex-col min-h-screen">
      <!-- Navigation -->
      <Navbar client:load currentPath={Astro.url.pathname} brandingLogo={brandingLogo} />
      
      <!-- Main content -->
      <main class="flex-grow">
        <slot />
      </main>
      
      <!-- Footer -->
      <Footer client:load brandingLogo={brandingLogo} />
    </div>
    
    <!-- Theme toggle button -->
  </body>
</html>
