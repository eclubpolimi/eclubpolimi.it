---
import MainLayout from '../layouts/main.astro';
---

<MainLayout>
  <div class="min-h-screen bg-white dark:bg-gray-900 transition-colors duration-300">
    
    <!-- Coming Soon Section -->
    <section style="background-color: #224371;" class="min-h-screen flex items-center justify-center px-5 pt-32 pb-20 relative">
      <div class="max-w-4xl mx-auto w-full text-center">
        
        <!-- Main Title -->
        <h1 class="text-5xl md:text-7xl font-bold text-white mb-8 animate-fade-in">
          University Startup<br />Challenge 2026
        </h1>
        
        <!-- Coming Soon Badge -->
        <div class="mb-8 animate-fade-in-delay">
          <span class="inline-block px-8 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full text-white text-xl font-semibold">
            Coming Soon!
          </span>
        </div>
        
        <!-- Description -->
        <p class="text-xl md:text-2xl text-gray-200 max-w-2xl mx-auto mb-12 animate-fade-in-delay-2">
          The details for the 2026 edition of the University Startup Challenge are not yet available. Stay tuned for updates!
        </p>

        <!-- Icon -->
        <div class="mt-16 animate-fade-in-delay-2">
          <svg class="w-32 h-32 mx-auto text-white/20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>

        <!-- Back Button -->
        <div class="mt-16 animate-fade-in-delay-2">
          <a
            href="/events"
            class="inline-block bg-white/10 backdrop-blur-sm border border-white/20 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105"
          >
            View All Events
          </a>
        </div>
      </div>

      <!-- Scroll Indicator (hidden, just decorative) -->
      <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 flex flex-col items-center gap-2 opacity-30">
        <div class="w-6 h-10 border-2 border-white/60 rounded-full flex items-start justify-center p-2">
          <div class="w-1.5 h-3 bg-white/60 rounded-full"></div>
        </div>
      </div>
    </section>

  </div>

  <style>
    @keyframes fade-in {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in {
      animation: fade-in 0.8s ease-out;
    }

    .animate-fade-in-delay {
      animation: fade-in 0.8s ease-out 0.2s both;
    }

    .animate-fade-in-delay-2 {
      animation: fade-in 0.8s ease-out 0.4s both;
    }
  </style>
</MainLayout>
