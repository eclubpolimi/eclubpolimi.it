---
import MainLayout from '../layouts/main.astro';
---

<MainLayout>
  <div class="min-h-screen bg-white dark:bg-gray-900 transition-colors duration-300">
    
    <!-- Hero Section -->
    <section style="background-color: #224371;" class="min-h-screen flex items-center justify-center px-5 pt-32 pb-20 relative">
      <div class="max-w-7xl mx-auto w-full">
        <!-- Badge - Centered -->
        <div class="mb-8 animate-fade-in text-center">
          <span class="inline-block px-6 py-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full text-white text-sm font-semibold uppercase tracking-wide">
            Finished
          </span>
        </div>
        
        <!-- Main Content - Side by Side -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-12">
          <!-- Left Side - Text -->
          <div class="animate-fade-in">
            <!-- Main Title -->
            <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6">
              University Startup<br />Challenge 2025
            </h1>
            
            <!-- Subtitle -->
            <p class="text-lg md:text-xl text-gray-200 mb-8">
              The first Milan startup challenge organized by the Entrepreneurship Club network, open to students of all partnered clubs' universities.
            </p>
          </div>

          <!-- Right Side - Hero Image -->
          <div class="w-full h-96 bg-white/10 backdrop-blur-sm rounded-2xl shadow-2xl flex items-center justify-center overflow-hidden border border-white/20 animate-fade-in-delay">
            <div class="text-center p-8">
              <svg class="w-32 h-32 mx-auto mb-4 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <p class="text-white/60 text-lg">USC 2025 Hero Image</p>
            </div>
          </div>
        </div>

        <!-- Month-long Competition Text - Centered -->
        <div class="text-center mb-8 animate-fade-in-delay-2">
          <p class="text-2xl md:text-3xl text-white font-semibold mb-8">
            A month-long entrepreneurship competition
          </p>

          <!-- Program Button -->
          <div>
            <p class="text-lg text-gray-200 mb-4">
              Click below to see the detailed program of the event
            </p>
            <a
              href="https://assets.ctfassets.net/b9kw9yhwywsl/5KNus9iMgdD9E6rQ0lxJT/906abcffa1f828c0b5ab8b5bbf734048/USC_2025_-_Detailed_Program_Brief_version.pdf"
              target="_blank"
              rel="noopener noreferrer"
              style="background-color: #FC3F1A;"
              class="inline-block text-white px-8 py-4 rounded-lg text-lg font-semibold transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105"
            >
              View Detailed Program
            </a>
          </div>
        </div>
      </div>

      <!-- Scroll Indicator -->
      <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 flex flex-col items-center gap-2 animate-bounce cursor-pointer" onclick="window.scrollTo({ top: window.innerHeight, behavior: 'smooth' })">
        <div class="w-6 h-10 border-2 border-white/60 rounded-full flex items-start justify-center p-2">
          <div class="w-1.5 h-3 bg-white/60 rounded-full animate-scroll"></div>
        </div>
      </div>
    </section>

    <!-- Events Schedule Section -->
    <section class="py-20 px-5 bg-white dark:bg-gray-900">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-12 text-center">
          Events Schedule
        </h2>
        <div class="space-y-6">
          <!-- Event 1 -->
          <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow duration-300">
            <div class="flex flex-col md:flex-row md:items-start gap-4">
              <div class="flex-shrink-0">
                <div class="text-2xl font-bold text-gray-900 dark:text-white">April 11, 2025</div>
              </div>
              <div class="flex-1">
                <p class="text-lg text-gray-700 dark:text-gray-300">
                  <span class="font-semibold" style="color: #224371;">[Statale]</span> Badge distribution, opening ceremony and networking aperitivo
                </p>
              </div>
            </div>
          </div>

          <!-- Event 2 -->
          <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow duration-300">
            <div class="flex flex-col md:flex-row md:items-start gap-4">
              <div class="flex-shrink-0">
                <div class="text-2xl font-bold text-gray-900 dark:text-white">April 12, 2025</div>
              </div>
              <div class="flex-1">
                <p class="text-lg text-gray-700 dark:text-gray-300">
                  <span class="font-semibold" style="color: #224371;">[Statale]</span> Challenge presentation, seminars and idea development with mentors
                </p>
              </div>
            </div>
          </div>

          <!-- Event 3 -->
          <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow duration-300">
            <div class="flex flex-col md:flex-row md:items-start gap-4">
              <div class="flex-shrink-0">
                <div class="text-2xl font-bold text-gray-900 dark:text-white">April 30, 2025</div>
              </div>
              <div class="flex-1">
                <p class="text-lg text-gray-700 dark:text-gray-300">
                  Deadline to deliver pitch/demo and prototype
                </p>
              </div>
            </div>
          </div>

          <!-- Event 4 -->
          <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow duration-300">
            <div class="flex flex-col md:flex-row md:items-start gap-4">
              <div class="flex-shrink-0">
                <div class="text-2xl font-bold text-gray-900 dark:text-white">May 7, 2025</div>
              </div>
              <div class="flex-1">
                <p class="text-lg text-gray-700 dark:text-gray-300">
                  <span class="font-semibold" style="color: #224371;">[Bocconi]</span> Startup showcase, seminars and workshops, top 10 team announcements, awards ceremony, and closing aperitivo
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Organizers Section -->
    <section class="py-20 px-5 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-12 text-center">
          Organizers
        </h2>
        
        <!-- First row - 3 logos -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8 max-w-4xl mx-auto">
          <div class="bg-white dark:bg-gray-700 rounded-xl p-8 flex items-center justify-center h-40 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="text-center">
              <svg class="w-20 h-20 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              <p class="text-gray-700 dark:text-gray-300 font-semibold">E-Club Polimi Pictograph</p>
            </div>
          </div>

          <div class="bg-white dark:bg-gray-700 rounded-xl p-8 flex items-center justify-center h-40 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="text-center">
              <svg class="w-20 h-20 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              <p class="text-gray-700 dark:text-gray-300 font-semibold">E-Club Bocconi</p>
            </div>
          </div>

          <div class="bg-white dark:bg-gray-700 rounded-xl p-8 flex items-center justify-center h-40 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="text-center">
              <svg class="w-20 h-20 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              <p class="text-gray-700 dark:text-gray-300 font-semibold">E-Club Statale</p>
            </div>
          </div>
        </div>

        <!-- Second row - 3 logos -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8 max-w-4xl mx-auto">
          <div class="bg-white dark:bg-gray-700 rounded-xl p-8 flex items-center justify-center h-40 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="text-center">
              <svg class="w-20 h-20 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              <p class="text-gray-700 dark:text-gray-300 font-semibold">E-Club Cattolica</p>
            </div>
          </div>

          <div class="bg-white dark:bg-gray-700 rounded-xl p-8 flex items-center justify-center h-40 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="text-center">
              <svg class="w-20 h-20 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              <p class="text-gray-700 dark:text-gray-300 font-semibold">E-Club Biccoca</p>
            </div>
          </div>

          <div class="bg-white dark:bg-gray-700 rounded-xl p-8 flex items-center justify-center h-40 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="text-center">
              <svg class="w-20 h-20 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              <p class="text-gray-700 dark:text-gray-300 font-semibold">E-Club LIUC</p>
            </div>
          </div>
        </div>

        <!-- Third row - 1 logo centered -->
        <div class="grid grid-cols-1 gap-8 max-w-xs mx-auto">
          <div class="bg-white dark:bg-gray-700 rounded-xl p-8 flex items-center justify-center h-40 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="text-center">
              <svg class="w-20 h-20 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              <p class="text-gray-700 dark:text-gray-300 font-semibold">Eclub UNIPD</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Partners Section -->
    <section class="py-20 px-5 bg-white dark:bg-gray-900">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-12 text-center">
          Partners
        </h2>
        
        <!-- First 2 rows - 3x3 grid (6 partners) -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
          <!-- Row 1 -->
          <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 flex items-center justify-center h-32 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="text-center">
              <svg class="w-16 h-16 mx-auto text-gray-400 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
              <p class="text-gray-600 dark:text-gray-400 font-medium text-sm">Università degli Studi di Milano</p>
            </div>
          </div>

          <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 flex items-center justify-center h-32 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="text-center">
              <svg class="w-16 h-16 mx-auto text-gray-400 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              <p class="text-gray-600 dark:text-gray-400 font-medium text-sm">PoliHub</p>
            </div>
          </div>

          <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 flex items-center justify-center h-32 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="text-center">
              <svg class="w-16 h-16 mx-auto text-gray-400 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <p class="text-gray-600 dark:text-gray-400 font-medium text-sm">Money</p>
            </div>
          </div>

          <!-- Row 2 -->
          <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 flex items-center justify-center h-32 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="text-center">
              <svg class="w-16 h-16 mx-auto text-gray-400 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              <p class="text-gray-600 dark:text-gray-400 font-medium text-sm">Startupforaday</p>
            </div>
          </div>

          <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 flex items-center justify-center h-32 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="text-center">
              <svg class="w-16 h-16 mx-auto text-gray-400 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
              <p class="text-gray-600 dark:text-gray-400 font-medium text-sm">InnovUp</p>
            </div>
          </div>

          <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 flex items-center justify-center h-32 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="text-center">
              <svg class="w-16 h-16 mx-auto text-gray-400 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
              </svg>
              <p class="text-gray-600 dark:text-gray-400 font-medium text-sm">University Network</p>
            </div>
          </div>
        </div>

        <!-- Last row - 2 logos centered -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-2xl mx-auto">
          <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 flex items-center justify-center h-32 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="text-center">
              <svg class="w-16 h-16 mx-auto text-gray-400 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
